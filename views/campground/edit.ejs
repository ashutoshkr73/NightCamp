<div class="border container rounded mt-3  bg-white" style="width:40%; height:60%; margin: 0 auto;">
    <div class="row ">
        <div class="col" >
        <form action="/campground/<%= campground._id %>?_method=PUT" method="POST" >
          <h3 class="text-primary">Edit your CampGround</h3>
            <label ><strong>name</strong></label>
            <div class="form-group">
              <input class="form-control" type="text" name="name" value="<%= campground.name %>">
            </div>
              <label ><strong>Image-Url</strong></label>
            <div class="form-group">
              <input  class="form-control" type="text" name="image"  value="<%= campground.image %>">
            </div>
            <label ><strong>Description</strong></label>
            <div class="form-group">
              <input  class="form-control" type="text" name="description"  value="<%= campground.description %>">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-danger btn-block">Submit</button>
            </div>
            <a href="/campground/<%= campground._id %>"><strong>Go Back</strong></a>
          </form>
    </div>
