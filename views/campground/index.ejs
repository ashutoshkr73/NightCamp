
<div class="container mt-3">
<div class="jumbotron">
    <div class="container">
          <h2>Welcome to Yelpcamp !</h2>
           <p>View our hand-picked campgrounds from all over the world</p>
        <p>
          <a class="btn btn-success btn-lg"href="/campground/new">Add new CampGround</a>
        </p>
    </div>
</div>

<div class="row text-center">
    <% campground.forEach((campground)=>{ %>
      <div class="col-lg-4 col-md-4 col-sm-6">
         <div class="img-thumbnail " >
           <img src="<%= campground.image %>" width=100% >
        </div>
        <div class="caption">
            <h4><%=  campground.name %></h4>
        </div>
        <p>
          <a href="/campground/<%=campground._id %>" class="btn btn-primary">More Info</a>
        </p>
      </div> 
       <% }) %>
   </div>

</div>
