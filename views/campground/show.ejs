<div class="container">
   <div class="row mt-5">
      <div class="col-md-3">
        <p class="lead">YelpCamp</p>
        <div class="list-group">
          <li class="list-group-item active">Info 1</li>
          <li class="list-group-item">Info 2</li>
          <li class="list-group-item">Info 3</li>
        </div>
      </div>
      <div class="col-md-9">
         <div class="img-thumbnail">
               <img class="responsive" src="<%= campground.image %>" alt=""> 
         <div class="caption-full">
            <h4 class="float-right">500rs/night</h4>
            <h4><a href=""><%= campground.name %> </a></h4>
            <p>
               <%= campground.description %>
            </p>
            <p>
              <em>Submitted By <%= campground.author.username %></em>
            </p>

            <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
            <a href="/campground/<%= campground._id %>/edit" class="btn btn-success btn-sm"><strong>Edit</strong></a>
            <form id="delete-form" action="/campground/<%= campground._id %>?_method=DELETE" method='POST'>
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>
            <% } %>
         </div>
       </div>
     <br>

       <div class="card card-body bg-light">
          <div class="text-right">
            <a href="/campground/<%= campground._id %>/comments/new" class='btn btn-success btn-sm'>Add New Comment</a>
          </div>
          <hr>
          <% campground.comments.forEach((comments)=>{ %>
          <div class="row">
             <div class="col-md-12">
               <strong>  <%= comments.author.username %></strong>
               <span class="float-right">
                  10days ago
               </span>
             <p>
               <%= comments.text %>
               </p>
               
           <% if(currentUser && comments.author.id.equals(currentUser._id)){ %>
             <a id="delete-form" href="/campground/<%= campground._id %>/comments/<%= comments._id %>/edit" class="btn btn-success btn-sm"><strong>Edit</strong></a>
             <form id="delete-form" action="/campground/<%= campground._id %>/comments/<%=comments._id %>?_method=DELETE" method='POST'>
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>
            <% } %>
             </div>
          </div>
          <% }) %>
       </div>
   </div>
 </div>
</div>








    
 

